<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.RelatorioProduto"
             Title="Relatorio do Produto">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Relatório de Compras por Período"               
               TextColor="White"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
    
        <!-- Campos de Data Início e Data Fim -->

        <HorizontalStackLayout Padding="5" Spacing="20">
            <Frame BackgroundColor="{StaticResource Primary}"
                   Padding="10"
                   Margin="10">
                <VerticalStackLayout>
                    <Label Text="Data Início" 
                           HorizontalOptions="CenterAndExpand"/>
                    <DatePicker x:Name="dtpInicio" />
                </VerticalStackLayout>
            </Frame>
            <Frame BackgroundColor="{StaticResource Primary}"
                   Padding="10"
                   Margin="10">
                <VerticalStackLayout>
                    <Label Text="Data Fim" 
                           HorizontalOptions="CenterAndExpand"/>
                    <DatePicker x:Name="dtpFim" />
                </VerticalStackLayout>
            </Frame>
        </HorizontalStackLayout>

        <!-- Botão filtrar -->
        <Button Text="Filtrar" Clicked="Button_Clicked" 
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontAttributes="Bold"/>

        <!-- Lista produtos -->
        <CollectionView x:Name="cvProduto" Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="0,0,0,10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Descricao}" FontAttributes="Bold" />
                            <Label Text="{Binding Quantidade, StringFormat='Qtd: {0}'}" />
                            <Label Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                            <Label Text="{Binding DataCadastro, StringFormat='{0:dd/MM/yyyy}'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>